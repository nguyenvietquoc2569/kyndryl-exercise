{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/employee-portal",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "root": "apps/employee-portal",
        "outputPath": "dist/apps/employee-portal"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nrwl/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "employee-portal:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "employee-portal:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "employee-portal:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nrwl/next:export",
      "options": {
        "buildTarget": "employee-portal:build:production"
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/employee-portal"],
      "options": {
        "jestConfig": "apps/employee-portal/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/employee-portal/**/*.{ts,tsx,js,jsx}"]
      }
    }
  },
  "tags": []
}
